---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Number Game">
   <div
      class="container min-h-screen mx-auto p-6 text-center flex flex-col items-center justify-center space-y-10 text-white"
   >
      <header class="space-y-7">
         <h1
            style="font-family: 'Lobster', cursive;"
            class="text-4xl md:text-5xl"
         >
            Guess My Number
         </h1>

         <div
            class="text-7xl font-bold border-4 text-green border-green mx-16 py-2 rounded-2xl"
         >
            ?
         </div>
      </header>

      <main
         class="space-y-5 text-2xl md:text-3xl flex flex-col md:flex-row md:items-center md:space-x-10"
      >
         <div class="space-y-5">
            <p class="">Between 1 and 20</p>
            <p class="">You have 5 attempts</p>
         </div>

         <div class="space-y-5">
            <p class="mb-3">Start guessing...</p>
            <input
               type="number"
               class="text-white text-5xl bg-green text-center py-4 w-36 rounded-2xl shadow-2xl focus:outline-none"
            />
         </div>
      </main>

      <footer class="flex items-center space-x-5 text-2xl">
         <div class="space-y-8">
            <p>Best Score:</p>
            <p>High Score:</p>
         </div>

         <div class="flex flex-col space-y-5 text-teal font-medium">
            <button
               class="bg-brown py-3 px-6 rounded-2xl shadow-md hover:opacity-70"
               >Check</button
            >
            <a href="/practice"
               ><button
                  class="bg-brown py-3 px-6 rounded-2xl shadow-md hover:opacity-70"
                  >Try Again</button
               >
            </a>
         </div>
      </footer>
   </div>
</Layout>
